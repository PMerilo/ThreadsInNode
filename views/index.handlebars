<link rel="stylesheet" href="styles/homepage.css">
<link rel="stylesheet" href="styles/product.css">
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.js"></script>
<div class="slider-nav">
  <div class="slide1">
    <img src="images/banner.jpg" alt="placeholder" id="banner" width="100%" class="img-responsive mt-5">
  </div>
  <div class="slide2">
    <img src="images/banner2.png" alt="placeholder" id="banner" width="100%" class="img-responsive mt-5">
  </div>
  <div class="slide3">
    <img src="images/banner3.png" alt="placeholder" id="banner" width="100%" class="img-responsive mt-5">
  </div>
  <div class="slide4">
    <img src="images/banner4.png" alt="placeholder" id="banner" width="100%" class="img-responsive mt-5">
  </div>
  <div class="slide45">
    <img src="images/banner5.png" alt="placeholder" id="banner" width="100%" class="img-responsive mt-5">
  </div>
</div>
<div class="container">
  <br>
  <h1 style="font-family: 'Courier New', monospace;">Best Selling Products</h1>
  <div class="row mt-3">
    <div class="product-showcase">
      {{#each top10Products}}
      <div class="wrapper">
        <div class="product-scard">
          <div class="product-left">
            <div class="header">
              <h1>{{this.name}}</h1>
            </div>
            <div class="product-main">
              <div class="focus">
                <span>Description</span>
              </div>
              <p>{{this.description}}</p>
            </div>
            <div class="product-details">
              <div class="product-total">
                <h3>Total Price</h3>
                <p>${{this.price}}</p>
              </div>
            </div>
            <div class="product-btns">
              <button class="button shop-item-button" value="{{ this.sku }}" value="1" onclick="addtocartClicked(this)">
                <span>Add to cart</span>
                <div class="cart">
                  <svg viewBox="0 0 36 26">
                    <polyline points="1 2.5 6 2.5 10 18.5 25.5 18.5 28.5 7.5 7.5 7.5"></polyline>
                    <polyline points="15 13.5 17 15.5 22 10.5"></polyline>
                  </svg>
                </div>
              </button>
              <button type="button" value="{{ this.sku }}" class="wishlist btn bx bx-bookmark-heart"
                style="font-size: 1.75em;" onclick="wishList(this)"></button>
            </div>
          </div>
          <div class="product-right">
            {{#if this.posterURL}}
            <img src="{{this.posterURL}}">
            {{else}}
            <img src="/images/no-image.jpg">
            {{/if}}
          </div>
        </div>
        <input type="hidden" name="sku" value="{{ this.sku }}" class="sku">
      </div>
      {{/each}}
    </div>
  </div>
  <div class="row mt-3">
    {{#each products}}
    <div class="col col-12 col-xs-12 col-md-6 col-lg-4 col-xl-3" id="product_card">
      <div class="card">
        {{#if this.posterURL}}
        <img class="card-img-top product-image" src="{{this.posterURL}}" alt="Card image cap" width="153px"
          height="372px">
        {{else}}
        <img class="card-img-top product-image" src="/images/no-image.jpg" alt="Card image cap" width="153px"
          height="372px">
        {{/if}}
        <div class="card-button">
          <button type="button" class="show-item modal-opener" value="{{this.sku}}" data-bs-toggle="modal"
            data-bs-target="#myModal_{{this.sku}}">
            Shop This Product
          </button>
        </div>

        <div class="modal" id="myModal_{{this.sku}}">
          <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
              <div class="row">
                {{#if this.posterURL}}
                <div class="container col-12 col-md-6">
                  <img src="{{this.posterURL}}" height="541px" width="381px" class="image">
                </div>
                {{else}}
                <div class="container col-12 col-md-6">
                  <img src="/images/no-image.jpg" height="541px" width="381px" class="image">
                </div>
                {{/if}}

                <div class="container col-12 col-md-6 modal-info">
                  <button type="button" class="btn-close x-button" data-bs-dismiss="modal"></button>
                  <div class="modal-header">
                    <h6 class="modal-title">{{ this.name }}</h6>
                    <div class="review" id="review_{{this.sku}}">
                      <span class="review-star bx bx-star"></span>
                      <span class="review-star bx bx-star"></span>
                      <span class="review-star bx bx-star"></span>
                      <span class="review-star bx bx-star"></span>
                      <span class="review-star bx bx-star"></span>
                      <p class="totalreviews">{{this.reviews_given}} Review/s</p>
                    </div>
                  </div>

                  <div class="modal-body">
                    <div class="price">${{ this.price }}</div>
                    <div class="desc">{{ this.description }}</div>
                  </div>

                  <div class="modal-footer">
                    <button class="button shop-item-button" value="{{ this.sku }}" value="1"
                      onclick="addtocartClicked(this)">
                      <span>Add to cart</span>
                      <div class="cart">
                        <svg viewBox="0 0 36 26">
                          <polyline points="1 2.5 6 2.5 10 18.5 25.5 18.5 28.5 7.5 7.5 7.5"></polyline>
                          <polyline points="15 13.5 17 15.5 22 10.5"></polyline>
                        </svg>
                      </div>
                    </button>
                    <button type="button" value="{{ this.sku }}" class="wishlist btn bx bx-bookmark-heart"
                      style="font-size: 1.75em;" onclick="wishList(this)"></button>
                    <div class="to-reviews" onclick="location.href='http://localhost:5000/reviews/{{this.sku}}';">See
                      Full Details</div>
                  </div>

                </div>
              </div>
            </div>

          </div>
        </div>
        {{!-- <input type="hidden" id="stars" value="{{this.stars_given}}">
        <input type="hidden" id="reviews" value="{{this.reviews_given}}"> --}}
      </div>
    </div>
    {{/each}}
  </div>
</div>

<script>
  $(document).ready(function () {
    var Container = document.getElementsByClassName("wrapper")
    console.log(Container)
    for (i = 1; i < 6; i++) {
      var sku = Container[i].getElementsByClassName('sku')[0].value
      var ele = Container[i].getElementsByClassName('wishlist')[0]
      $.ajax({
        url: "/wishlist",
        method: 'POST',
        contentType: "application/json",
        data: JSON.stringify({ sku: sku, status: "check" }),
        success: function (res) {
          if (res.response == 'add' && res.status == "check") {
            ele.classList.add('bxs-bookmark-heart')
            console.log("added")
          } else if (res.response == 'remove' && res.status == "check") {
            ele.classList.remove('bxs-bookmark-heart')
            console.log("removed")
          }
        }
      })
    }
  })

  document.querySelectorAll('.button').forEach(button => button.addEventListener('click', e => {
    if (!button.classList.contains('loading')) {

      button.classList.add('loading');

      setTimeout(() => button.classList.remove('loading'), 3700);
    }
    e.preventDefault();
  }));
  $('.slider-nav').slick({
    slidesToShow: 1,
    slidesToScroll: 1,
    autoplay: true,
    focusOnSelect: true,
  });

  $('.product-showcase').slick({
    slidesToShow: 1,
    slidesToScroll: 1,
    autoplay: true,
    autoplaySpeed: 5000,
    dots: true,
    focusOnSelect: true,
  });
</script>