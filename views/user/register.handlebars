<style>
*{
    padding: 0;
    margin: 0;
    box-sizing: border-box;

}

body{ 
    background: rgb(219, 226, 226);
}

#rows{
    background: white;
    border-radius: 30px;
    box-shadow: 12px 12px 22px grey;
}



img{
    border-top-left-radius: 30px;
    border-bottom-left-radius: 30px;
    min-height: 100%;

}

.btn {
    border: none;
    outline: none;
    height: 50px;
    width: 100%;
    background-color: rgb(95, 153, 207);
    color: white;
    border-radius: 4px;
    font-weight: bold;

}

.btn:hover{
    background: white;
    border: 1px solid;
    color: rgb(99, 189, 184);

}



</style>


<section class="Form my-4 mx-5">
    <div class="container">
        <div class="row no-gutters" id="rows">
            <div class="col-lg-6" style="padding: 0;">
                <img src="images/our_model.jpg" class="img-fluid" alt="">
            </div>
            <div class="col-lg-6 px-5 pt-5">
                <h1 class="font-weight-bold py-3">Threads in Time</h1>
                <h4></h4>
                <form method="POST" action="/register">
                <div class="form-group">
                    <div class="col-lg-6">
					<label for="name">Name</label>
					<input type="text" class="form-control" name="name" value="{{name}}" required>
                    </div>
				</div>
				<div class="form-group">
                    <div class="col-lg-6">
					<label for="email">Email</label>
					<input type="email" name="email" class="form-control" value="{{email}}" required>
                    </div>
				</div>
                <div class="form-group">
                    <div class="col-lg-6">
					<label for="phoneNumber">Phone Number</label>
					<input type="number" class="form-control" name="phoneNumber" value="{{phoneNumber}}" minlength="8" maxlength="8" placeholder="You can skip this field">
                    </div>
				</div>
                {{!-- <div class="form-group">
                    <div class="col-lg-6">
					<label for="bankAccount">Bank Account Number</label>
					<input type="number" class="form-control" name="bankAccount" value="" minlength="8" maxlength="8" required>
                    </div>
				</div> --}}
                <div class="form-group">
                    <div class="col-lg-6">
					<label for="gender">Gender</label>
					<select class="form-control" name="gender" required>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Rather Not Say">Rather Not Say</option>
                    </select>
                    </div>
				</div>
                
				<div class="form-group">
                    <div class="col-lg-6">
					<label for="password">Password</label>
					<input type="password" name="password" class="form-control" value="{{password1}}" min="6" required>
                    </div>
				</div>
				<div class="form-group">
                    <div class="col-lg-6">
					<label for="password2">Confirm Password</label>
					<input type="password" name="password2" class="form-control" value="{{password2}}" min="6"required>
                    </div>
				</div>
                           
                    <div class="form-row">
                        <div class="col-lg-6">
                            <button type="submit" type="submit" class="btn btn-primary mt-3 mb-5">Sign Up</button>
                        </div>
                    </div>
                    
                    </form>
                    <p>Have an account? <a href="/login"><strong>Login</strong></a></p>
                    <p>Forgot Password? <a href="/forgetpassword"><strong>Reset Password</strong></a></p>
                    <p><a href="/login-google" class="btn btn-google btn-user btn-block">
                    <i class="bx bx-google fa-fw"></i> Register Or Login with Google
                    </a></p>
                    
                    
              
            
            </div>
        </div>
  </div>
</section>
        
        
                      

