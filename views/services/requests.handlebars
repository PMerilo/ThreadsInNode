{{setVar "scriptsPath" "_serviceScripts"}}


<div class="card p-2">
  <h2>My Requests</h2>
  <div id="toolbar">
    <button></button>
  </div>
  <table id="reqTable" data-toggle="table" data-url="/api/requests" data-detail-view="true"
    data-detail-view-by-click="false" data-detail-view-icon="false" data-detail-formatter="apptDetailFormatter" data-toolbar="#toolbar">
    <thead>
      <tr>
        <th scope="col" data-field="title">Request Title</th>
        <th scope="col" data-field="service.name">Service</th>
        <th scope="col" data-field="tailorID">Tailor</th>
        <th scope="col" data-field="description">Description</th>
        <th scope="col" data-field="status">Status</th>
        <th scope="col" data-field="appointments" data-formatter="apptFormatter" data-events="apptEvents">Appointments</th>
        <th scope="col" data-field="operate" data-formatter="operateFormatter" data-events="operateEvents"></th>
      </tr>
    </thead>
  </table>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Request</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="mb-3 col-6">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" name="title">
          </div>
          <div class="mb-3 col-6">
            <label for="service" class="form-label">Service</label>
            <select class="form-select" aria-label="Default select example" name="service">
              <option selected>Select Service</option>
              {{>options}}
            </select>
          </div>
          <div class="mb-3 col-12">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" name="description"></textarea>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary confirm">Save Changes</button>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="delModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Cancel Request?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p class="text-danger">Warning this action is irreversable</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger del">Delete</button>
      </div>
    </div>
  </div>
</div>