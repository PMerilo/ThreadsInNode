<div>
  <h2>My Requests</h2>
</div>
<hr>
{{#each requests}}
<div class="card">
  <ul class="list-group list-group-flush">
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <a href="" class="text-black stretched-link">
        <h3 class="m-0">{{service.name}} - {{title}}</h3>
      </a>
      <p class="m-0">{{tailor.user.name}}</p>
    </li>
    <li class="list-group-item">
      <p>
        {{description}}
      </p>
    </li>
    <li class="list-group-item">
      <a class="stretched-link" href="">
        Appointment
      </a>
      <i class="bi bi-chevron-right float-end"></i>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <div class="my-auto">
        {{status}}
      </div>
      <div class="my-auto">
        {{!-- <button href='' class="btn btn-primary mx-2" style="width: 110px;" data-bs-toggle="modal"
          data-bs-target="">
          View more
        </button> --}}
        <button class="btn btn-danger delete" style="width: 80px;" data-bs-toggle="modal" data-bs-target="#delModal"
          title="Delete">
          <i class="bi bi-trash"></i>
        </button>
      </div>
    </li>

  </ul>
</div>
{{/each}}

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Request</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="mb-3 col-6">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" name="title">
          </div>
          <div class="mb-3 col-6">
            <label for="service" class="form-label">Service</label>
            <select class="form-select" aria-label="Default select example" name="service">
              <option selected>Select Service</option>
              {{>options}}
            </select>
          </div>
          <div class="mb-3 col-12">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" name="description"></textarea>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary confirm">Save Changes</button>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="delModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Cancel Request?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p class="text-danger">Warning this action is irreversable</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger del">Delete</button>
      </div>
    </div>
  </div>
</div>