<script>
    $(document).ready(function () {
        let id = $('[name="tailorID"]').attr('data-bs-id')
        if (id) {
            $(`[value="${id}"]`).attr('selected', true)
            $('select[name="tailorID"]').attr('disabled', true)
            $('.tailor-select').append(`<input type="hidden" class="form-control" name="tailorID" value=${id}>`)
        }
    })
</script>