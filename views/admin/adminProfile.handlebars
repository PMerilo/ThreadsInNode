<div>
  <div class="card mx-auto my-5" style="max-width: 70%">
    <div class="row g-0">
      <div class="col-md-4 p-4 d-flex justify-content-center align-items-center">
        <img src="/images/logo.png" class="img-fluid rounded-start" alt="">
      </div>
      <div class="col-md-8 d-flex justify-content-center align-items-center border-start border-info">
        <div class="card-body">
          <div class="row mb-5">
            <h5 class="col-10 card-title mb-0 fs-3">{{user.name}} </h5>
            <a class='col-1 btn btn-outline-dark p-1 border-0' href=""><i class="bi bi-pencil-square" title="Edit profile"></i></a>
          </div>
          <div class="row">
            <p class="col-5">Email:</p>
            <p class="col-7">{{user.email}}</p>
          </div>
          <div class="row">
            <p class="col-5">Phone Number:</p>
            <p class="col-7">{{user.phoneNumber}}</p>
          </div>
          <div class="row">
            <p class="col-5">Gender:</p>
            <p class="col-7">{{user.gender}}</p>
          </div>
          <div class="row">
            <p class="col-5">Password:</p>
            <a class="col-7" href="">Change Password</a>
          </div>
          
        </div>
      </div>
    </div>
  </div>
</div>